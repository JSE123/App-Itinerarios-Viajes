<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:orientation="vertical"
        android:background="@drawable/rounder_edittext"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFotoDestinoPropio"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDestino_vistaPropio"
                android:layout_width="match_parent"
                android:layout_height="26sp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="Destino: "/>

            <TextView
                android:id="@+id/txtFecha_Destino_vistaPropio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="Fecha: "
                android:layout_marginTop="5sp"/>

            <TextView
                android:id="@+id/txtActividades_Destino_vistaPropio"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5sp"
                android:text="Actividades Planificadas: " />

            <TextView
                android:id="@+id/txtNotasAdi_Destino_VistaPropio"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5sp"
                android:text="Notas Adiconales: " />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditDestino"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="✏️  Editar"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnDeleteDestino"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="🗑 Eliminar"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>